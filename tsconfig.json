{
  "compilerOptions": {
    "target": "ESNext", // Use modern JavaScript targeting for compatibility
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // Keep case consistency
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // Ensure modern ESM compatibility
    "moduleResolution": "node", // "bundler" can cause issues; "node" is safer for most setups
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Optional but recommended for `paths`
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
